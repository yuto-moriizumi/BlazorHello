@page "/simple" 

<h3>BmiSample</h3>
<table>
	<tr>
		<td>名前</td>
		<td>@name</td>
	</tr>
	<tr>
		<td>身長</td>
		<td>@height</td>
	</tr>
	<tr>
		<td>体重</td>
		<td>@weight</td>
	</tr>
</table>
<div style="font-size: @fontSize">
	計算結果は @bmi です。 
</div>
@code {
	private string name = "モリイズミユウト";
	private const double height = 160.0;
	private const double weight = 62;
	private double bmi = weight / ((height / 100) * (height / 100));
	private string fontSize = "32px";
}
