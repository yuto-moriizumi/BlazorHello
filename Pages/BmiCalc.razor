@page "/bmi"
@page "/bmi/{Height}/{Weight}"
<h3>Bmi</h3>
<table class="table">
	<tr>
		<td>名前</td>
		<td>@bmi.Name</td>
	</tr>
	<tr>
		<td>身長</td>
		<td>@bmi.Height</td>
	</tr>
	<tr>
		<td>体重</td>
		<td>@bmi.Weight</td>
	</tr>
</table>
<div style="font-size: @fontSize">
	計算結果は @bmi.Bmi.ToString("00.0") です。
</div>
@* aaa *@
<BlazorHello.Components.Copyright Name="Yuto Moriizumi" Year="2021"/>
@code {
	[Parameter]
	public string Height { get; set; }
	[Parameter]
	public string Weight { get; set; }

	private string fontSize = "32px";
	private BmiItem bmi;

	protected override void OnInitialized()
	{
		base.OnInitialized();
		if (!string.IsNullOrEmpty(Height))
		{
			this.bmi = new BmiItem()
			{
				Name = "森泉友登",
				Height = double.Parse(Height),
				Weight = double.Parse(Weight),
			};
		}
		else
		{
			this.bmi = new BmiItem() { Name = "パラメータを指定せよ", Height = 0, Weight = 0 };
		}
	}

}
